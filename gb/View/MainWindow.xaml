                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#1ABC9C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#16A085" Duration="0:0:0.3" 
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation To="1.1" Duration="0:0:0.3"
                                 Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"/>
                                            <DoubleAnimation To="1.1" Duration="0:0:0.3"
                                 Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#1ABC9C" Duration="0:0:0.3" 
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation To="1.0" Duration="0:0:0.3"
                                 Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"/>
                                            <DoubleAnimation To="1.0" Duration="0:0:0.3"
                                 Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#148F77"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Place Walls Button -->
            <Button Content="Place Walls" Width="200" Height="40" FontSize="16" FontWeight="Bold" 
    Background="#1ABC9C" Foreground="White" BorderThickness="0"
    Cursor="Hand" Padding="10,5" Command="{Binding CreateWallsCommand}" Margin="0,0,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
